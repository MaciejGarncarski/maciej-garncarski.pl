  { name: "Socket.io", color: "#010101", icon: socketio },
  { name: "Linux", color: "#FCC624", icon: linux },
  { name: "Fastify", color: "#000000", icon: fastify },
  { name: "Express", color: "#000000", icon: express },
  { name: "Cypress", color: "#69D3A7", icon: cypress },
  { name: "Vitest", color: "#6E9F18", icon: vitest },
