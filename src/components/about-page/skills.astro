  { name: "Prisma", color: "#2D3748", icon: prisma },
  { name: "Drizzle", color: "#C5F74F", icon: drizzle },
  { name: "Figma", color: "#F24E1E", icon: figma },
  { name: "NGINX", color: "#009639", icon: nginx }
] satisfies Skill[];
---

<h2 class="text-2xl font-semibold">Technologie üõ†Ô∏è</h2>
<ul
  class="lg:grid-cols- grid grid-cols-2 gap-2 md:grid-cols-5 lg:grid-cols-6 lg:gap-3">
  {
    skills.map(({ color, icon: Icon, name }) => {
      return (
        <li
          style={`--bg-skill: ${color}`}
          title={name}
          class="text-foreground flex items-center gap-3 rounded-md border border-white/5 bg-(--bg-skill)/30 fill-white px-3 py-2 font-semibold text-ellipsis backdrop-blur-md transition-transform hover:scale-95">
          <div class="size-6 shrink-0">
            <Icon />
          </div>
          <p class="truncate">{name}</p>
        </li>
      );
    })
  }
</ul>
