<div
  class="fixed inset-0 z-0 pointer-events-none text-accent overflow-hidden"
  aria-hidden="true"
>
  <!-- Dot grid -->
  <svg
    class="absolute inset-0 opacity-8"
    xmlns="http://www.w3.org/2000/svg"
    width="100%"
    height="100%"
  >
    <defs>
      <pattern
        id="dot-grid"
        x="0"
        y="0"
        width="32"
        height="32"
        patternUnits="userSpaceOnUse"
      >
        <circle cx="1" cy="1" r="1" fill="currentColor"></circle>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#dot-grid)"></rect>
  </svg>

  <!-- Top-right circle rings -->
  <svg
    class="absolute top-[5%] right-[3%] hidden size-40 md:block lg:size-48"
    viewBox="0 0 200 200"
    xmlns="http://www.w3.org/2000/svg"
  >
    <circle
      cx="100"
      cy="100"
      r="80"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
      opacity="0.15"></circle>
    <circle
      cx="100"
      cy="100"
      r="50"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      opacity="0.15"></circle>
  </svg>

  <!-- Top-left cross -->
  <svg
    class="absolute top-[10%] left-[5%] hidden size-10 md:block"
    viewBox="0 0 40 40"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(20, 20)" opacity="0.2">
      <line
        x1="-16"
        y1="0"
        x2="16"
        y2="0"
        stroke="currentColor"
        stroke-width="1.5"></line>
      <line
        x1="0"
        y1="-16"
        x2="0"
        y2="16"
        stroke="currentColor"
        stroke-width="1.5"></line>
    </g>
  </svg>

  <!-- Mid-left diamond -->
  <svg
    class="absolute top-[45%] left-[2%] hidden size-16 md:size-22 md:block"
    viewBox="0 0 60 60"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(30, 30) rotate(45)" opacity="0.12">
      <rect
        x="-20"
        y="-20"
        width="40"
        height="40"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></rect>
    </g>
  </svg>

  <!-- Mid-right dots cluster -->
  <svg
    class="absolute top-[40%] right-[2%] hidden size-12 md:block md:size-16"
    viewBox="0 0 50 50"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g opacity="0.18">
      <circle cx="20" cy="10" r="3" fill="currentColor"></circle>
      <circle cx="40" cy="25" r="2" fill="currentColor"></circle>
      <circle cx="10" cy="30" r="2.5" fill="currentColor"></circle>
      <circle cx="35" cy="45" r="1.5" fill="currentColor"></circle>
    </g>
  </svg>

  <!-- Bottom-left triangle -->
  <svg
    class="absolute bottom-[12%] left-[8%] hidden size-14 md:block"
    viewBox="0 0 50 50"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(25, 25)" opacity="0.15">
      <polygon
        points="0,-22 19,11 -19,11"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></polygon>
    </g>
  </svg>

  <!-- Bottom-right hexagon -->
  <svg
    class="absolute right-[5%] bottom-[15%] hidden size-14 md:block md:size-24"
    viewBox="0 0 60 60"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(30, 30)" opacity="0.12">
      <polygon
        points="24,0 12,20.8 -12,20.8 -24,0 -12,-20.8 12,-20.8"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"></polygon>
    </g>
  </svg>

  <!-- Center-left small circle -->
  <svg
    class="absolute top-[30%] left-[1%] hidden size-4 md:block"
    viewBox="0 0 16 16"
    xmlns="http://www.w3.org/2000/svg"
  >
    <circle cx="8" cy="8" r="6" fill="currentColor" opacity="0.1"></circle>
  </svg>

  <!-- Top-center dashed arc -->
  <svg
    class="absolute top-[2%] left-1/2 hidden h-10 w-48 -translate-x-1/2 md:block"
    viewBox="0 0 200 40"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M 0 30 Q 100 -10 200 30"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      stroke-dasharray="4 4"
      opacity="0.15"></path>
  </svg>

  <!-- Bottom-center cross -->
  <svg
    class="absolute bottom-[5%] left-1/2 hidden size-6 -translate-x-1/2 md:block"
    viewBox="0 0 30 30"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(15, 15)" opacity="0.12">
      <line
        x1="-12"
        y1="0"
        x2="12"
        y2="0"
        stroke="currentColor"
        stroke-width="1"></line>
      <line
        x1="0"
        y1="-12"
        x2="0"
        y2="12"
        stroke="currentColor"
        stroke-width="1"></line>
    </g>
  </svg>

  <!-- Right-side small squares -->
  <svg
    class="absolute top-[55%] right-[1%] hidden size-8 md:block"
    viewBox="0 0 40 40"
    xmlns="http://www.w3.org/2000/svg"
  >
    <g transform="translate(15, 15)" opacity="0.1">
      <rect
        x="-6"
        y="-6"
        width="12"
        height="12"
        fill="none"
        stroke="currentColor"
        stroke-width="1"></rect>
    </g>
    <g transform="translate(30, 30)" opacity="0.08">
      <rect x="-4" y="-4" width="8" height="8" fill="currentColor"></rect>
    </g>
  </svg>

  <!-- Left-side zigzag -->
  <svg
    class="absolute top-[60%] left-[1%] hidden h-5 w-20 md:block"
    viewBox="0 0 80 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <polyline
      points="0,15 15,0 30,15 45,0 60,15"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      opacity="0.12"></polyline>
  </svg>
</div>
