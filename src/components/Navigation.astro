---
import { fade } from "astro:transitions";
import clsx from "clsx";

type Link = {
  url: string;
  text: string;
};

const navigationData: Array<Link> = [
  {
    text: "O mnie",
    url: "/"
  },
  {
    text: "Projekty",
    url: "/projekty"
  },
  {
    text: "Blog",
    url: "/blog"
  },
  {
    text: "Galeria AI",
    url: "/galeria-ai"
  }
];

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const subpath = pathname.match(/[^\/]+/g);
---

<nav
  class="flex items-center justify-center lg:justify-start"
  transition:name="navigation"
  transition:animate={fade({ duration: 0.8 })}>
  <ul class="-mx-1 flex gap-x-2 gap-y-4 lg:mx-0 lg:gap-x-8">
    {
      navigationData.map((n) => {
        const isActive =
          n.url === pathname || n.url === "/" + (subpath?.[0] || "");

        const isBlogPage = n.url === "/blog/";

        const isBlogPageActive =
          isBlogPage && Astro.url.pathname.startsWith("/blog/");

        return (
          <li>
            <a
              href={n.url}
              class={clsx(
                "rounded px-2 py-1 text-base transition-all lg:px-3 lg:text-base",
                isActive || isBlogPageActive
                  ? "bg-foreground text-background font-semibold"
                  : "text-muted-foreground hover:bg-muted hover:font-semibold"
              )}>
              {n.text}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
