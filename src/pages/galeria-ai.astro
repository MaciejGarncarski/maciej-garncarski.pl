---
import type { ImageMetadata } from "astro";
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import { aiGallery } from "../data/ai-garllery";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/ai-gallery/*.{jpeg,jpg,png}"
);
---

<Layout>
  <h1 class="text-foreground text-center text-xl">
    Galeria obraz√≥w wygenerowanych przez AI
  </h1>
  <div
    class="flex flex-col flex-wrap items-center justify-center gap-12 lg:flex-row lg:flex-wrap">
    {
      aiGallery.map((img) => {
        const src = images["/src/assets/ai-gallery/" + img.image]?.();

        if (!src) {
          return null;
        }

        return (
          <figure>
            <a href={`/ai-gallery/${img.image}`} target="_blank">
              <Picture
                src={src}
                width={512}
                formats={["avif", "webp"]}
                class="shadow-blog w-64 rounded transition-transform hover:-translate-y-1 lg:rounded-md"
                alt=""
              />
            </a>
            <figcaption class="text-muted-foreground mt-2 text-center text-xs italic">
              <p>{img.title}</p>
            </figcaption>
          </figure>
        );
      })
    }
  </div>
</Layout>
