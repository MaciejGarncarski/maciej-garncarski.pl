---
import Layout from "../layouts/layout.astro";
import photoapp from "../assets/projects/photoapp.png";
import coincontrol from "../assets/projects/coincontrol.png";
import kanban from "../assets/projects/kanban.png";
import nextTracker from "../assets/projects/next-tracker.png";
import githubActionsWidget from "../assets/projects/github-actions-widget.png";
import { Picture } from "astro:assets";

const projects = [
  {
    title: "CoinControl",
    description:
      "CoinControl to aplikacja do śledzenia budżetu zaprojektowana, aby pomóc użytkownikom monitorować ich dochody i wydatki.",
    demo: "https://coincontrol.maciej-garncarski.pl",
    github: "https://github.com/MaciejGarncarski/coin-control",
    tags: ["React", "Tailwind CSS", "Zustand", "Express", "BullMQ", "Prisma"],
    image: coincontrol
  },
  {
    title: "Kanban",
    description:
      "Aplikacja Kanban stworzona w NestJS z zastosowaniem wzorców CQRS, Domain-Driven Design (DDD) oraz architektury hexagonalnej.",
    demo: "https://kanban.maciej-garncarski.pl",
    github: "https://github.com/MaciejGarncarski/kanban",
    tags: ["Next.js", "NestJS", "Drizzle ORM", "Mantine UI", "JWT"],
    image: kanban
  },
  {
    title: "Is There New Next.js",
    description:
      "Narzędzie do śledzenia najnowszych wydanych wersji Next.js. Automatycznie pobiera informacje o aktualnych wersjach, changelogach oraz datach wydań.",
    demo: "https://is-there-new-nextjs.vercel.app/",
    github: "https://github.com/MaciejGarncarski/is-there-new-nextjs",
    tags: ["Next.js", "Tailwind CSS", "REST", "Markdown"],
    image: nextTracker
  },
  {
    title: "GitHub Actions Widget",
    description:
      "Widget do wyświetlania GitHub Actions w jednym miejscu. Stworzyłem tę aplikację, ponieważ GitHub działa tak wolno, że nie mogłem tego znieść.",
    demo: "https://github-actions-widget.vercel.app/",
    github: "https://github.com/maciejgarncarski/github-actions-widget",
    tags: ["React", "Next.js", "Tailwind CSS", "REST"],
    image: githubActionsWidget
  },
  {
    title: "Fetcher",
    description:
      "Fetcher to lekka, typowana nakładka na fetch, zaprojektowana z myślą o prostocie. Ułatwia pisanie przejrzystych zapytań HTTP z walidacją odpowiedzi.",
    github: "https://github.com/MaciejGarncarski/fetcher",
    tags: ["TypeScript", "Zod", "HTTP", "REST"]
  },
  {
    title: "Photo App",
    description:
      "PhotoApp to aplikacja społecznościowa inspirowana Instagramem. Użytkownicy mogą tworzyć posty, lajkować je i dodawać do nich komentarze. Aplikacja posiada funkcję czatu, która do komunikacji wykorzystuje WebSocket.",
    github: "https://github.com/MaciejGarncarski/photo-app",
    tags: ["Next.js", "React", "Fastify", "Prisma", "Socket.IO", "PostgreSQL"],
    image: photoapp
  }
];
---

<Layout>
  <h1
    class="text-foreground text-left text-2xl font-bold text-balance lg:text-3xl">
    Moje najciekawsze projekty
  </h1>
  <ul class="grid gap-12 lg:grid-cols-2">
    {
      projects.map((project) => {
        return (
          <li class="h-full">
            <article class="glass flex h-full flex-col gap-8">
              <header class="aling-center z-40 flex items-start justify-between text-base">
                <h2 class="text-2xl font-semibold text-pretty">
                  {project.title}
                </h2>
              </header>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => {
                  return (
                    <span class="bg-foreground text-background rounded-md px-2 py-1 text-sm font-semibold text-pretty md:text-base">
                      {tag}
                    </span>
                  );
                })}
              </div>
              <div class="flex h-full flex-col gap-4">
                {project.image ? (
                  <Picture
                    formats={["avif", "webp"]}
                    layout="full-width"
                    src={project.image}
                    alt={project.title}
                    class="border-foreground/10 mx-auto w-auto grow rounded-md border object-contain lg:shadow"
                  />
                ) : (
                  <div class="border-foreground/10 bg-background/20 text-foreground/80 mx-auto flex h-40 w-full grow items-center justify-center rounded-md border text-center md:h-72 lg:shadow">
                    <p>Brak podglądu</p>
                  </div>
                )}
                <p class="text-foreground/85 min-h-16 text-left text-base">
                  {project.description}
                </p>
                <div class="mt-auto flex gap-4 font-semibold md:gap-8 md:text-lg">
                  {project.demo ? (
                    <a
                      href={project.demo}
                      class="border-foreground/8 bg-background/15 inline-block rounded-md border px-4 py-1 text-pretty"
                      target="_blank">
                      Demo
                    </a>
                  ) : null}
                  <a
                    href={project.github}
                    class="border-foreground/8 bg-background/15 inline-block rounded-md border px-4 py-1 text-pretty"
                    target="_blank">
                    GitHub
                  </a>
                </div>
              </div>
            </article>
          </li>
        );
      })
    }
  </ul>
</Layout>
